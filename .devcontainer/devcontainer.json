{
    "name": "devcontainer-features",
    // "image": "mcr.microsoft.com/devcontainers/base:debian",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.11-bullseye",
    "mounts": [
        "source=${localEnv:HOME}/.config/starship/starship.toml,target=/tmp/starship.toml,type=bind,consistency=cached"
    ],
    "features": {
        "./starship": {
            "configFile": "tobias"
        }
        // "./starship": {}
        // "./starship": {"localConfig": true}
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.fontFamily": "MesloLGS Nerd Font Mono",
                "json.schemas": [
                    {
                        "fileMatch": [
                            "*/devcontainer-feature.json"
                        ],
                        "url": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainerFeature.schema.json"
                    }
                ]
            },
            "extensions": [
                "mads-hartmann.bash-ide-vscode"
            ]
        }
    },
    "remoteUser": "vscode"
    // "postCreateCommand": "cp /tmp/starship.toml ~/.config/starship.toml"
}
